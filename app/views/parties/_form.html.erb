<div class="landing-body">

<div class="button-holder">
<%= form_for @party, class: "form-inline" do |f| %>
<div class="new-form">

  <div class="field">
    <%= f.text_field :title, placeholder: 'Title', class: "col-sm-2 form-field" %>
  </div>

  <div class="field">
  <div class="col-sm-2 form-field">
    <%= time_select :party, 'date', prompt: {hour: 'Hour', minute: 'Minute'} %>
  </div>
  </div>

  <div class="field">
    <%= f.text_field :street_address, placeholder: 'Street Address', class: "col-sm-2 form-field" %>
  </div>

  <div class="field">
    <%= f.text_field :city, placeholder: 'City', class: "col-sm-2 form-field" %>
  </div>

  <div class="field">
    <%= f.text_field :zip_code, placeholder: "#{@party.zip_code}", readonly: true, class: "col-sm-2 zip-code"%>
  </div>

  <div class="field">
    <%= select_tag 'party[state]', options_for_select(us_states), prompt: 'Select a State', class: "col-sm-2 form-field" %>
  </div>

  <div class="field">
    <%= f.text_area :description, placeholder: 'Description', class: "col-sm-2 form-field" %>
  </div>

  <%= f.hidden_field :date, value: @party.date %>

  <div class="create-button">
    <%= f.submit "Create a Star Party", class: "btn" %>
  </div>
  </div>
<% end %>
</div>
</div>
