<%= form_tag :party_search, method: :get, class: "form-inline" do %>
  <div class="form-group search-field">
    <%= text_field_tag :q, "Enter zip code", class: "form-control" %>
    <%= submit_tag "Find a Star Party!", class: "btn btn-btn-outline-dark btn-lg" %>
  </div>
<% end %>

<button type="button" class="d-block btn btn-btn-outline-dark btn-lg">Find a Party!</button>
<button type="button" class="d-block btn btn-btn-outline-dark btn-lg">Plan a Party!</button>

<div class="image-container">
  <img src="<%= @apod.source %>" class="apod" alt="<%= @apod.description %>">
</div>
